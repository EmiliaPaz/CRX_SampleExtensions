{
  "name": "User Scripts API",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Sample extension that uses the User Scripts API",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "host_permissions": [
    "https://example.com/*"
  ],
  "permissions": [
    "userScripts"
  ]
}
